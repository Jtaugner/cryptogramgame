{
  "name": "cryptogram",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "PLATFORM=yandex vite",
    "build:yandex": "PLATFORM=yandex sh -c 'tsc && rm -rf dist && vite build && npm run archive'",
    "build:gp": "PLATFORM=gp sh -c 'tsc && rm -rf dist && vite build && npm run archive'",
    "build:gd": "PLATFORM=gd sh -c 'tsc && rm -rf dist && vite build && npm run archive'",
    "archive": "rm -rf archiveBuildCryptogram && mkdir -p archiveBuildCryptogram && cd dist && zip -r ../archiveBuildCryptogram/dist.zip .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "confetti-react": "^2.6.0",
    "framer-motion": "^12.16.0",
    "i18next": "^25.3.2",
